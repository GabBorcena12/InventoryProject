@model InventoryApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "User Registration";
}

<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 p-5" style="min-width: 24rem; max-width: 40rem; width: 100%; border-radius: 1rem;">
        <div class="text-center mb-4">
            <h3 class="fw-bold">@ViewData["Title"]</h3>
            <p class="text-muted mb-0">Create your account to access the dashboard.</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="row">
                <div class="form-group mb-3 col-md-6">
                    <label asp-for="Username" class="form-label fw-semibold">Username</label>
                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter a username" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3 col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3 col-md-6">
                    <label asp-for="Password" class="form-label fw-semibold">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Create a password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4 col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Register</button>
            </div>
        </form>
    </div>
</div>
