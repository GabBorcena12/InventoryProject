@model InventoryApp.Models.LoginViewModel
@{
    ViewData["Title"] = "User Login";
}

<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 p-5" style="min-width: 22rem; max-width: 28rem; width: 100%; border-radius: 1rem;">
        <div class="text-center mb-4">
            <h3 class="fw-bold">@ViewData["Title"]</h3>
            <p class="text-muted mb-0">Please sign in to continue.</p>
        </div>

        <form method="post" asp-action="Login">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Sign In</button>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center mt-4 mb-0" role="alert">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>
