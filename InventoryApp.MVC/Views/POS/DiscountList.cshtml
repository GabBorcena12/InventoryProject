@model IEnumerable<InventoryApp.Core.Models.PosModels.Discount>
@{
    ViewData["Title"] = "Discount List";

    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalItems = ViewBag.TotalItems ?? 0;
    int totalPages = (int)Math.Ceiling((decimal)totalItems / pageSize);
    string search = ViewBag.Search ?? "";
    bool showInactive = ViewBag.ShowInactive ?? false;
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>

    <!-- Search & Filters -->
    <form method="get" class="row g-2 mb-3">
        <div class="col-sm-4">
            <input type="text" name="search" value="@search" class="form-control" placeholder="Search by name or SKU" />
        </div>       
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
        <div class="col-sm-3 form-check d-flex align-items-center">
            <input type="checkbox" class="form-check-input me-2" name="showInactive" value="true" @(showInactive ? "checked" : "") />
            <label class="form-check-label">Show Inactive</label>
        </div>
        <div class="col-sm-3 text-end">
            <a asp-action="CreateDiscount" class="btn btn-success">
                <i class="bi bi-plus"></i> Add Discount
            </a>
        </div>
    </form>

    @if (Model != null && Model.Any())
{
        <!-- Table -->
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Discount SKU</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                <tr>
                    <td>@d.discountSKU</td>
                    <td>@d.name</td>
                    <td>
                        @{
                            var discountLabel = d.skuDiscountType switch
                            {
                                "REGULAR DISCOUNT" => "Regular Discount",
                                "BUY&TAKE" => "Buy & Take Discount",
                                _ => d.skuDiscountType
                            };
                        }
                        @discountLabel
                    </td>
                    <td>
                        @if (d.isActive)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-x-circle me-1"></i> Inactive
                            </span>
                        }
                    </td>
                    <td>
                        <a asp-action="EditDiscount" asp-route-id="@d.id" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil-square me-1"></i> Manage Discount
                        </a>

                        <button type="button" class="btn btn-sm btn-outline-danger delete-btn"
                                data-id="@d.id"
                                data-name="@d.name">
                            <i class="bi bi-trash me-1"></i> Delete
                        </button>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?search=@search&showInactive=@showInactive&page=1&pageSize=@pageSize">First</a>
                    </li>
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?search=@search&showInactive=@showInactive&page=@(currentPage - 1)&pageSize=@pageSize">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?search=@search&showInactive=@showInactive&page=@i&pageSize=@pageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?search=@search&showInactive=@showInactive&page=@(currentPage + 1)&pageSize=@pageSize">Next</a>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?search=@search&showInactive=@showInactive&page=@totalPages&pageSize=@pageSize">Last</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning mt-3">No records found.</div>
    }
</div>
<!-- Hidden delete form -->
<form id="deleteForm" method="post" asp-action="DeleteDiscountConfirmed">
    <input type="hidden" name="id" id="deleteId" />
</form>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmToast" tabindex="-1" aria-labelledby="toggleStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="toggleStatusModalLabel">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to <strong id="toastItemName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = 0;

        $(document).ready(function () {
            $('.delete-btn').click(function () {
                deleteId = $(this).data('id');
                const name = $(this).data('name');
                $('#toastItemName').text(name);
                $('#confirmDeleteBtn').text('Delete');

                // Show Bootstrap modal
                var modalEl = new bootstrap.Modal(document.getElementById('confirmToast'));
                modalEl.show();
            });

            $('#confirmDeleteBtn').click(function () {
                // Set hidden input and submit form
                $('#deleteId').val(deleteId);
                $('#deleteForm').submit();
            });
        });
    </script>
}
