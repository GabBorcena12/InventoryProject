@model LabelPrintViewModel
@{
    ViewData["Title"] = "Label Generator";
}

<div class="container mt-4">
    <h2 class="mb-4">Label Generator</h2>

    <div class="row">

        <!-- Step 1: Select Batch -->
        <div class="col-md-6 mb-3">
            <label asp-for="SKU" class="form-label">SKU</label>
            <select asp-for="SKU" class="form-control" id="productDropdown">
                <option value="">-- Select SKU --</option>
            </select>
            <small class="form-text text-muted">
                Select the SKU for which you want to print labels. Only active SKU with inventory are shown.
            </small>
            <span asp-validation-for="SKU" class="text-danger"></span>
        </div>

        <!-- Step 2: Auto-filled fields -->
        <div class="col-md-6 mb-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" id="ProductName" placeholder="e.g. Toei Cat Tuna 500g" readonly />
            <input asp-for="ProductId" type="hidden" id="ProductId" />
            <small class="form-text text-muted">
                Product is automatically filled based on the selected SKU.
            </small>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PackagingType" class="form-label">Unit of Measure</label>
            <input asp-for="PackagingType" class="form-control" id="PackagingType" placeholder="e.g. Grams or Piece" readonly />
            <small class="form-text text-muted">
                Indicates whether the product is packed by weight (grams) or by piece.
            </small>
        </div>

        <!-- Step 3: User Inputs -->
        <div class="col-md-6 mb-3">
            <label asp-for="WeightOrPieces" class="form-label">Stock Volume</label>
            <input asp-for="WeightOrPieces" class="form-control" value="1" />
            <small class="form-text text-muted">
                Enter the quantity based on packaging type (grams or pieces).
            </small>
            <span asp-validation-for="WeightOrPieces" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="SellingPrice" class="form-label">Unit Price</label>
            <input asp-for="SellingPrice" class="form-control" />
            <small class="form-text text-muted">
                Input the selling price to be displayed on the label.
            </small>
            <span asp-validation-for="SellingPrice" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="NumberOfLabels" class="form-label">Number of Labels</label>
            <input asp-for="NumberOfLabels" class="form-control" id="NumberOfLabels" />
            <small class="form-text text-muted">
                Default is based on current inventory. Adjust if fewer labels are needed.
            </small>
            <span asp-validation-for="NumberOfLabels" class="text-danger"></span>
        </div>
    </div>

    <button type="button" id="submitLabelView" class="btn btn-primary">
        <i class="bi bi-printer"></i> Print Labels
    </button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {

            // Load all product on page load
            $.getJSON('/Label/GetAllProductVariant', function (data) {
                const $productDropdown = $('#productDropdown');
                $productDropdown.empty().append('<option value="">-- Select Product Variant --</option>');
                $.each(data, function (i, product) {
                    $productDropdown.append(`<option value="${product}">${product}</option>`);
                });
            });

            // On product selection, autofill product info
            $('#productDropdown').on('change', function () {
                const variantSku = $(this).val();
                if (!variantSku) return;

                $.getJSON('/Label/GetProductVariantInfo', { variantSku }, function (data) {
                    if (data.success) {
                        $('#ProductId').val(data.productId);
                        $('#ProductName').val(data.productName);
                        $('#PackagingType').val(data.packagingType);
                        $('#WeightOrPieces').val(data.variantVolume);
                        $('#NumberOfLabels').val("1");
                        $('input[name="SellingPrice"]').val(data.priceSuggestion);
                    } else {
                        alert('Product not found.');
                    }
                });
            });

            $('#submitLabelView').on('click', function () {
            // Open the window immediately on user click
            const printWindow = window.open("", "_blank");
            if (!printWindow) {
                alert("Popup blocked! Please allow popups for this site.");
                return;
            }

            const model = {
                ProductId: $('#ProductId').val(),
                ProductName: $('#ProductName').val(),
                PackagingType: $('#PackagingType').val(),
                WeightOrPieces: $('input[name="WeightOrPieces"]').val(),
                SellingPrice: $('input[name="SellingPrice"]').val(),
                SKU: $('#productDropdown').val(),
                NumberOfLabels: $('input[name="NumberOfLabels"]').val()
            };

            $.ajax({
                type: "POST",
                url: '/Label/LabelView',
                data: model,
                success: function (html) {
                    // Write content to the window that was opened on click
                    printWindow.document.open();
                    printWindow.document.write(html);
                    printWindow.document.close();
                },
                error: function (xhr) {
                    console.error("LabelView error:", xhr.responseText);
                    alert('Error generating label preview: ' + xhr.statusText);
                }
            });
        });

        });
    </script>
}
