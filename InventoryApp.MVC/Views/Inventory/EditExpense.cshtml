@model InventoryApp.Core.Models.OperatingExpense
@{
    ViewData["Title"] = "Manage Expense";
}

<div class="container-fluid m-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="EditExpense" method="post" class="row g-3 needs-validation">
        <div asp-validation-summary="All" class="text-danger"></div>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-group col-12 col-md-6">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="date" class="form-control" required />
            <small class="form-text text-muted">Update the date of the expense.</small>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group col-12 col-md-6">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<ExpenseCategory>()" required>
                <option value="">-- Select Category --</option>
            </select>
            <small class="form-text text-muted">Change the category if needed.</small>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group col-12 col-md-6">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" required placeholder="e.g. Updated Electric Bill" />
            <small class="form-text text-muted">Update the description of the expense.</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group col-12 col-md-6">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
            <small class="form-text text-muted">Adjust the total amount if required.</small>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group col-12 col-md-6">
            <label asp-for="Notes"></label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional additional details"></textarea>
            <small class="form-text text-muted">Modify or add any extra notes (optional).</small>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex justify-content-end mt-3">
            <a asp-action="OperatingExpenses" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
