@model List<InventoryApp.Core.Models.OperatingExpense>
@{
    ViewData["Title"] = "Operating Expenses";
    var subTotal = Model?.Sum(e => e.Amount) ?? 0;
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h2>Operating Expenses</h2>
        <a asp-action="CreateExpense" class="btn btn-success"><i class="bi bi-plus"></i>Add Expense</a>
    </div>
    <p class="text-muted mb-3">
        Lists all recorded business expenses such as utilities, supplies, and other operational costs incurred during store operations.
    </p>

    <form method="get" class="row g-3 mb-3">
        <div class="col-md-3">
            <label for="startDate" class="form-label mb-1">Start Date:</label>
            <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate" />
        </div>
        <div class="col-md-3">
            <label for="endDate" class="form-label mb-1">End Date:</label>
            <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate" />
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                        <td>@expense.Description</td>
                        <td>@expense.Category</td>
                        <td>@expense.Amount.ToString("N2")</td>
                        <td>@expense.Notes</td>
                        <td>
                            <div class="d-flex flex-wrap gap-1">
                                <a asp-action="EditExpense" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1">
                                    <i class="bi bi-pencil-square"></i> Manage
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteExpenseModal"
                                        data-expense-id="@expense.Id"
                                        data-expense-desc="@expense.Description">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </td>

                    </tr>
                }

                <!-- Subtotal Row -->
                <tr class="table-info fw-bold">
                    <td colspan="3" class="text-end">Subtotal:</td>
                    <td>@subTotal.ToString("N2")</td>
                    <td colspan="2"></td>
                </tr>
            </tbody>
        </table>
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        var active = (i == (int)ViewBag.CurrentPage) ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-action="OperatingExpenses"
                               asp-route-page="@i"
                               asp-route-startDate="@ViewBag.StartDate"
                               asp-route-endDate="@ViewBag.EndDate">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">No records found.</div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteExpenseModal" tabindex="-1" aria-labelledby="deleteExpenseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="deleteExpenseModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to delete <strong id="modalExpenseDesc"></strong>?
            </div>
            <div class="modal-footer justify-content-center">
                <form id="deleteExpenseForm" method="post">
                    <input type="hidden" name="__RequestVerificationToken" value="@Antiforgery.GetTokens(Context).RequestToken" />
                    <input type="hidden" name="id" id="modalExpenseId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteExpenseModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const expenseId = button.getAttribute('data-expense-id');
            const expenseDesc = button.getAttribute('data-expense-desc');

            const modalExpenseId = deleteModal.querySelector('#modalExpenseId');
            const modalExpenseDesc = deleteModal.querySelector('#modalExpenseDesc');
            const form = deleteModal.querySelector('#deleteExpenseForm');

            modalExpenseId.value = expenseId;
            modalExpenseDesc.textContent = expenseDesc;

            form.action = `/Inventory/DeleteExpense`; // Adjust if controller is different
        });
    </script>
}
