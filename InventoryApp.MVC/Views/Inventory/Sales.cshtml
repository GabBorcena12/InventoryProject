@model List<InventoryApp.Core.Models.Sale>

@{
    ViewData["Title"] = "Sales List";
    var totalQuantity = Model.Sum(s => s.Quantity);
    var totalAmount = Model.Sum(s => s.TotalPrice);
}

<div class="container mt-4">
    <h2>Sales List</h2>    
    <p class="text-muted mb-3">
        Displays a comprehensive record of sales transactions to support performance tracking and inventory analysis.
    </p>

    <form method="get" class="row g-3 mb-4">
        <!-- Product Name (Left side) -->
        <div class="col-md-3">
            <label for="productName" class="form-label mb-1">Product Name:</label>
            <input type="text" id="productName" name="productName" class="form-control" value="@ViewBag.ProductName" placeholder="Search product..." />
        </div>

        <!-- Start Date -->
        <div class="col-md-3">
            <label for="startDate" class="form-label mb-1">Start Date:</label>
            <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate" />
        </div>

        <!-- End Date -->
        <div class="col-md-3">
            <label for="endDate" class="form-label mb-1">End Date:</label>
            <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate" />
        </div>

        <!-- Filter Button -->
        <div class="col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Date Sold</th>
                    <th>Batch No.</th>
                    <th>Repack Item</th>
                    <th class="text-end">Quantity</th>
                    <th class="text-end">Total Price</th>
                    <th>Sales Channel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model)
                {
                    <tr>
                        <td>@sale.DateSold.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@sale.Inventory?.BatchNo</td>
                        <td>@sale.RepackItem?.QuantityValue @sale.RepackItem?.product?.UnitOfMeasure @sale.RepackItem?.product?.ProductName</td>
                        <td class="text-end">@sale.Quantity Piece@((sale.Quantity > 1) ? "s" : "")</td>
                        <td class="text-end">@sale.TotalPrice.ToString("N2")</td>
                        <td>@sale.SalesChannel</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-success fw-bold">
                    <td colspan="3" class="text-end">Subtotal:</td>
                    <td class="text-end">@totalQuantity</td>
                    <td class="text-end">@totalAmount.ToString("N2")</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        var active = (i == (int)ViewBag.CurrentPage) ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-action="Sales"
                               asp-route-page="@i"
                               asp-route-startDate="@ViewBag.StartDate"
                               asp-route-endDate="@ViewBag.EndDate"
                               asp-route-productName="@ViewBag.ProductName">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }

    }
    else
    {
        <div class="alert alert-warning">No records found.</div>
    }
</div>

