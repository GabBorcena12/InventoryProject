@model List<DisplayItem>
@{
    ViewData["Title"] = "Displayed Items";
    var totalQuantity = Model.Sum(x => x.QuantityDisplayed);
}

<div class="container mt-4">
    <h2>Displayed Items</h2>
    <p class="text-muted mb-3">
        Displays a list of available repacked items that are prepared and ready for sale in-store or through sales channels.
    </p>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <label for="productName" class="form-label">Product Name:</label>
            <input type="text" name="productName" id="productName" class="form-control" value="@ViewBag.ProductName" placeholder="Search product..." />
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Initial Qty</th>
                    <th>Sold Qty</th>
                    <th>Displayed On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RepackItem?.QuantityValue @item.RepackItem?.product?.UnitOfMeasure @item.RepackItem?.ProductName</td>
                        <td>@item.QuantityDisplayed Piece@((item.QuantityDisplayed > 1) ? "s" : "")</td>
                        <td>@item.QuantitySold Piece@((item.QuantitySold > 1) ? "s" : "")</td>
                        <td>@item.DisplayedOn.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-success"
                                    onclick="openSellModal('@item.RepackItem?.ProductName', @item.Id, @item.QuantityDisplayed)">
                                Mark as Sold
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-success fw-bold">
                    <td class="text-end">Subtotal:</td>
                    <td colspan="3">@totalQuantity Piece@((totalQuantity > 1) ? "s" : "")</td>
                </tr>
            </tfoot>
        </table>
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        var active = (i == (int)ViewBag.CurrentPage) ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               href="@Url.Action("DisplayItems", new { page = i, productName = ViewBag.ProductName })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }

    }
    else
    {
        <div class="alert alert-warning">No records found.</div>
    }
</div>

<!-- Sell Modal -->
<div class="modal fade" id="sellModal" tabindex="-1" aria-labelledby="sellModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-controller="Inventory" asp-action="MarkAsSold">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="sellModalLabel">Sell Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="sellDisplayItemId" />

                    <div class="mb-3">
                        <label for="sellItemName" class="form-label">Item</label>
                        <input type="text" class="form-control" id="sellItemName" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="sellQuantity" class="form-label">Quantity to Sell</label>
                        <input type="number" step="any" min="1" class="form-control" name="quantitySold" id="sellQuantity" required />
                        <small class="text-muted" id="maxQuantityInfo"></small>
                    </div>

                    <div class="mb-3">
                        <label for="salesChannel" class="form-label">Sales Channel</label>
                        <select class="form-select" name="salesChannel" id="salesChannel" required>
                            <option value="In-store">In-store</option>
                            <option value="Shopee">Shopee</option>
                            <option value="Lazada">Lazada</option>
                            <option value="Tiktok">Tiktok</option>
                            <option value="Out Items">Out Items or Spoiled</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm Sale</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
            function openSellModal(itemName, itemId, maxQty) {
            $('#sellItemName').val(itemName);
            $('#sellDisplayItemId').val(itemId); // This now maps to "id"
            $('#sellQuantity').val('');
            $('#maxQuantityInfo').text('Maximum available quantity: ' + maxQty);
            $('#sellQuantity').attr('max', maxQty);
            const modal = new bootstrap.Modal(document.getElementById('sellModal'));
            modal.show();
        }

    </script>
}
