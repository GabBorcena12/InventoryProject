@model InventoryApp.Core.Models.RepackItem
@{
    ViewData["Title"] = "Add Stock";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @await Html.PartialAsync("_ToastMessages")
    @await Html.PartialAsync("_ErrorMessage")

    <form asp-action="CreateRepack" method="post" class="border rounded p-4 shadow-sm bg-light">
        <input type="hidden" asp-for="InventoryId" />
        <input type="hidden" asp-for="ProductId" />
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label fw-semibold"></label>
            <input type="text" asp-for="ProductName" class="form-control" readonly />
            <input type="hidden" asp-for="ProductName" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="QuantityValue" class="form-label fw-semibold"></label><strong> (@ViewBag.UOM)</strong>
            <input asp-for="QuantityValue" class="form-control" placeholder="Per gram or piece" />
            <span asp-validation-for="QuantityValue" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PricePerUnit" class="form-label fw-semibold"></label>
            <input asp-for="PricePerUnit" class="form-control" />
            <span asp-validation-for="PricePerUnit" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="InitialQty" class="form-label fw-semibold"></label>
            <input asp-for="InitialQty" class="form-control" />
            <span asp-validation-for="InitialQty" class="text-danger"></span>
        </div>
        <small class="form-text text-muted">
            <strong>Example – Items Sold Per Piece:</strong><br />
            <strong>Quantity Value:</strong> <code>1 pc</code> – Specify the unit of measurement (e.g., per piece).<br />
            <strong>Price per Unit:</strong> <code>12.00</code> – Selling price per individual item.<br />
            <strong>Initial Quantity:</strong> <code>48</code> – Total number of individual units available (e.g., items in one pack).<br /><br />
            <u>For individually sold items:</u><br />
            - Define the unit (e.g., <code>1 pc</code>) in <strong>Quantity Value</strong>.<br />
            - Enter the selling price in <strong>Price per Unit</strong>.<br />
            - Specify the total quantity in <strong>Initial Quantity</strong>.
        </small>
        <br />
        <small class="form-text text-muted">
            <strong>Example – Items Sold by the Sack:</strong><br />
            <strong>Quantity Value:</strong> <code>500</code> – Repack size (e.g., grams or kilograms).<br />
            <strong>Price per Unit:</strong> <code>50</code> – Selling price for the specified quantity.<br />
            <strong>Initial Quantity:</strong> <code>10</code> – Number of repacked units (e.g., 10 packs of 500g).<br /><br />
            <u>For bulk items (e.g., sacks):</u><br />
            - Specify the repack size in <strong>Quantity Value</strong>.<br />
            - Set the unit price in <strong>Price per Unit</strong>.<br />
            - Provide the number of repacked units in <strong>Initial Quantity</strong>.
        </small>


        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Repack" asp-route-id="@Model.InventoryId" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-primary">Add to Stocks</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
