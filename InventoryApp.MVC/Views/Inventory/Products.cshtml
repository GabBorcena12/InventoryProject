@model List<InventoryApp.Core.Models.Product>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Product List";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h2>Product List</h2>
        <a class="btn btn-success" asp-action="CreateProduct"><i class="bi bi-plus"></i>Add Product</a>
    </div>
    <p class="text-muted mb-3">
        Shows all available products in the system with relevant details such as unit, volume, and category for inventory and sales tracking.
    </p>
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="productName" id="productName" class="form-control"
                   placeholder="Search product ..." value="@ViewBag.ProductName" />
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Alias</th>
                    <th>Unit of Measure</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.ProductAlias</td>
                        <td>@product.UnitOfMeasure</td>
                        <td>
                            <div class="d-flex flex-wrap gap-1">
                                <!-- Manage Product -->
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="EditProduct"
                                   asp-route-id="@product.Id">
                                    <i class="bi bi-pencil-square me-1"></i> Manage Product
                                </a>

                                @if (!product.IsDisabled)
                                {
                                    <!-- Disable button -->
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#disableConfirmModal"
                                            data-product-id="@product.Id"
                                            data-product-name="@product.ProductName">
                                        <i class="bi bi-slash-circle me-1"></i> Disable
                                    </button>
                                }
                                else
                                {
                                    <!-- Enable button -->
                                    <button type="button"
                                            class="btn btn-sm btn-outline-success"
                                            data-bs-toggle="modal"
                                            data-bs-target="#enableConfirmModal"
                                            data-product-id="@product.Id"
                                            data-product-name="@product.ProductName">
                                        <i class="bi bi-check-circle me-1"></i> Enable
                                    </button>
                                }

                                <!-- Delete button -->
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteConfirmModal"
                                        data-product-id="@product.Id"
                                        data-product-name="@product.ProductName">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        var active = (i == (int)ViewBag.CurrentPage) ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-action="Products"
                               asp-route-page="@i"
                               asp-route-productName="@ViewBag.ProductName">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning mt-3">No records found.</div>
    }
</div>
<!-- Enable Confirmation Modal -->
<div class="modal fade" id="enableConfirmModal" tabindex="-1" aria-labelledby="enableConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="enableConfirmModalLabel">Confirm Enable</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to enable <strong id="enableModalProductName"></strong>?
            </div>
            <div class="modal-footer justify-content-center">
                <form id="enableProductForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">Yes, Enable</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to permanently delete <strong id="deleteModalProductName"></strong>?
            </div>
            <div class="modal-footer justify-content-center">
                <form id="deleteProductForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Disable Confirmation Modal -->
<div class="modal fade" id="disableConfirmModal" tabindex="-1" aria-labelledby="disableConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title text-dark" id="disableConfirmModalLabel">Confirm Disable</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                Are you sure you want to disable <strong id="modalProductName"></strong>?
            </div>
            <div class="modal-footer justify-content-center">
                <form id="disableProductForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Disable</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Disable modal
        const disableModal = document.getElementById('disableConfirmModal');
        disableModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const name = button.getAttribute('data-product-name');
            const id = button.getAttribute('data-product-id');
            disableModal.querySelector('#modalProductName').textContent = name;
            disableModal.querySelector('#disableProductForm').action = `/Inventory/DisableProduct/${id}`;
        });

        // Enable modal
        const enableModal = document.getElementById('enableConfirmModal');
        enableModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const name = button.getAttribute('data-product-name');
            const id = button.getAttribute('data-product-id');
            enableModal.querySelector('#enableModalProductName').textContent = name;
            enableModal.querySelector('#enableProductForm').action = `/Inventory/EnableProduct/${id}`;
        });

        // Delete modal
        const deleteModal = document.getElementById('deleteConfirmModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const name = button.getAttribute('data-product-name');
            const id = button.getAttribute('data-product-id');
            deleteModal.querySelector('#deleteModalProductName').textContent = name;
            deleteModal.querySelector('#deleteProductForm').action = `/Inventory/DeleteProduct/${id}`;
        });
    </script>
}
