@model IEnumerable<InventoryApp.Core.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-fluid m-3">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h2 class="mb-0">Suppliers List</h2>
        <a asp-action="CreateSupplier" class="btn btn-success"><i class="bi bi-plus"></i>Add New Supplier</a>
    </div>
    <p class="text-muted mb-3">
        Displays a list of all registered suppliers providing goods or services, including their contact information and associated products.
    </p>
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="supplierName" id="supplierName" class="form-control"
                   value="@ViewBag.SupplierName" placeholder="Search supplier..." />
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Contact Number</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                    <tr>
                        <td>@supplier.Name</td>
                        <td>@supplier.ContactNumber</td>
                        <td>@supplier.Address</td>
                        <td>
                            <div class="d-flex flex-wrap gap-1">
                                <a class="btn btn-sm btn-outline-primary me-1"
                                   asp-action="EditSupplier"
                                   asp-route-id="@supplier.Id">
                                    <i class="bi bi-gear"></i> Manage Supplier
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteConfirmModal"
                                        data-supplier-id="@supplier.Id"
                                        data-supplier-name="@supplier.Name">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        var active = (i == (int)ViewBag.CurrentPage) ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-action="Suppliers"
                               asp-route-page="@i"
                               asp-route-supplierName="@ViewBag.SupplierName">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning mt-3">No records found.</div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete supplier <strong id="supplierName"></strong>?
                This will mark the supplier as deleted but keep the record for auditing.
            </div>
            <div class="modal-footer">
                <form id="deleteSupplierForm" method="post" asp-action="DeleteSupplier">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="supplierId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteConfirmModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var supplierId = button.getAttribute('data-supplier-id');
            var supplierName = button.getAttribute('data-supplier-name');

            document.getElementById('supplierId').value = supplierId;
            document.getElementById('supplierName').textContent = supplierName;
        });
    </script>
}
