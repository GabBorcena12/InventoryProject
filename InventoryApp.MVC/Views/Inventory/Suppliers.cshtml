@model IEnumerable<InventoryApp.Core.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-fluid m-3">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <h2 class="mb-0">Suppliers List</h2>
        <a asp-action="CreateSupplier" class="btn btn-success">Add New Supplier</a>
    </div>
    <p class="text-muted mb-3">
        Displays a list of all registered suppliers providing goods or services, including their contact information and associated products.
    </p>
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="supplierName" id="supplierName" class="form-control"
                   value="@ViewBag.SupplierName" placeholder="Search supplier..." />
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    @await Html.PartialAsync("_ToastMessages")
    @await Html.PartialAsync("_ErrorMessage")

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                    <tr>
                        <td>@supplier.Name</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        var active = (i == (int)ViewBag.CurrentPage) ? "active" : "";
                        <li class="page-item @active">
                            <a class="page-link"
                               asp-action="Suppliers"
                               asp-route-page="@i"
                               asp-route-supplierName="@ViewBag.SupplierName">@i</a>

                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning mt-3">No records found.</div>
    }

</div>