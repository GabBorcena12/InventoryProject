@if (TempData["ToastMessage"] != null)
{
    <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-4 mt-4" style="z-index: 1080; min-width: 300px; max-width: 90%;">
        <div class="toast show bg-success text-white shadow-lg border-0 rounded" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body m-1">
                    @TempData["ToastMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}
