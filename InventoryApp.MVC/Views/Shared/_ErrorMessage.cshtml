@if (TempData["ErrorMessage"] != null)
{
    <div id="error-status-modal" class="toast-container position-fixed top-0 start-50 translate-middle-x p-4 mt-4" style="z-index: 1080; min-width: 300px; max-width: 90%;">
        <div class="toast show bg-error text-white shadow-lg border-0 rounded" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body m-1">
                    @TempData["ErrorMessage"]
                </div>
            </div>
        </div>
    </div>
}

