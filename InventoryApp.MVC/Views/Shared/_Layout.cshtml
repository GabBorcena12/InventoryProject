    <script>
        function checkIsMobile() {
            // if ($(window).width() <= 1402 && $(window).height() <= 1109) {
            if($(window).width() <= 1402)
            {
                $("#mobileNav").removeClass("diplay-none");
                $("#desktopNav").addClass("diplay-none");
            } else {
                $("#mobileNav").addClass("diplay-none");
                $("#desktopNav").removeClass("diplay-none");
            }
        }
        $(document).ready(function() {
            checkIsMobile();
            $(window).on('resize', checkIsMobile);
        });
        
        // disable zoom in / zoom out
        window.addEventListener('wheel', function(e) {
            if (e.ctrlKey) {
                e.preventDefault();
            }
        }, { passive: false });

        window.addEventListener('keydown', function(e) {
            // Ctrl + '+' (plus), Ctrl + '-' (minus), Ctrl + '0' (reset)
            if (e.ctrlKey && (e.key === '+' || e.key === '-' || e.key === '=' || e.key === '0')) {
                e.preventDefault();
            }
        });

        // Optional: Disable gesturestart for pinch zoom on some browsers
        window.addEventListener('gesturestart', function (e) {
          e.preventDefault();
        });

        // fade toast
        document.addEventListener("DOMContentLoaded", function () {
            setTimeout(function () {
                document.querySelectorAll('#status-modal, #error-status-modal').forEach(function (el) {
                    el.classList.add('fade-out');
                    setTimeout(() => el.remove(), 500); // Remove from DOM after fade animation
                });
            }, 5000); // Wait 5 seconds before starting fade
        });
    </script>
